<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:id="@+id/ssid_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入WiFi的SSID" />

        <EditText
            android:id="@+id/pass_id"
            android:text="het123456"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入WiFi的密码" />

        <EditText
            android:id="@+id/mode_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入产品型号"
            android:text="000c01" />

        <EditText
            android:id="@+id/deviceip_id"
            android:text="192.168.1.87"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="可指定设备IP地址" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onScanWiFi"
                android:text="开始扫描" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
